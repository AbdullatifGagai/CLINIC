

@using ZCLINIC
@model ZCLINIC.Areas.Master.Models.Days

@{
    string URL = Model == null ? "/Master/Days/SaveDays" : "/Master/Days/UpdateDays";
}

<form class="form-horizontal" method="post" id="" data-url="@URL" data-display="Master" data-rurl="/Master/Days">

    @Html.HiddenFor(m => m.DId)

    <div class="row">


        <div class="form-group form-group-xs">
            <label class="control-label col-sm-4">Days Name <b class="wysiwyg-color-red">*</b></label>
            <div class="form-group has-feedback col-sm-8">
                @Html.TextBoxFor(m => m.DayName, new { @class = "form-control input-group", placeholder = "Days Name", type = "text", required = "required" })
                <div class="form-control-feedback"><i class=""></i></div>
            </div>
        </div>
























        <div class="modal-footer no-padding no-border">
            <button type="button" class="btn btn-danger btn-xs" data-dismiss="modal"><i class="icon-cross"></i>Close</button>
            <button type="button" data-submit="true" class="btn btn-primary btn-xs"><i class="icon-floppy-disk position-left"></i>Save</button>
        </div>

    </div>

</form>

