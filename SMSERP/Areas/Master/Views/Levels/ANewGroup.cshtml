@using ZCLINIC
@model ZCLINIC.Areas.Master.Models.Levels

@{
    string URL = Model == null ? "/Master/Levels/Master_LevelsBatchSave" : "/Master/Levels/UpdateLevels";
    int counter = 0;
}

<style>
    /*Remove Arrows/Spinners from type number*/
    /* Chrome, Safari, Edge, Opera */
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    /* Firefox */
    input[type=number] {
        -moz-appearance: textfield;
    }
</style>

<form method="post" data-url="@URL" data-rurl="/Master/Levels/IndexNewGroup" data-display="Batch">



    @Html.HiddenFor(m => m.LId)
    <div class="row">



        <div class="form-group form-group-xs col-md-12">







            <div class="form-group form-group-xs col-md-6">
                <label>Course Category<b class="wysiwyg-color-red"></b></label>
                @{
                    List<ZCLINIC.Areas.Master.Models.CourseCategory> CouCategory = new ZCLINIC.Areas.Master.Models.CourseCategory().Master_CourseCategoryGetAll(Context.Session.GetBValues(), Context.GetIP(), Context.GetCInfo());

                }
                @Html.DropDownList("LevelName", CouCategory.Select(s => new SelectListItem() { Text = s.CategoryName, Value = s.CategoryName.ToString() }), new { @class = "form-control " })
            </div>



            <div class="form-group form-group-xs col-md-6">
                <label>Teacher Name<b class="wysiwyg-color-red"></b></label>
                @{
                    List<ZCLINIC.Areas.Master.Models.Teacher> Teacher = new ZCLINIC.Areas.Master.Models.Teacher().Master_TeacherGetAll(Context.Session.GetBValues(), Context.GetIP(), Context.GetCInfo());

                }
                @Html.DropDownList("TeacherId", Teacher.Select(s => new SelectListItem() { Text = s.TeacherName, Value = s.TeacherId.ToString() }), new { @class = "form-control " })
            </div>







        </div>
    </div>



    <div class="row">

        <div class="form-group form-group-xs col-md-12">
            <div class="form-group form-group-xs col-md-6">
                <label>Start  Date<b class="wysiwyg-color-red"></b></label>
                @Html.TextBoxFor(m => m.Sdate, new { @class = "form-control", type = "date" })

            </div>

            <div class="form-group form-group-xs col-md-6">
                <label>End Date<b class="wysiwyg-color-red"></b></label>
                @Html.TextBoxFor(m => m.Edate, new { @class = "form-control", type = "date" })

            </div>



        </div>
    </div>


    <div class="row">



        <div class="form-group form-group-xs col-md-12">





            <div class="form-group form-group-xs col-md-6">
                <label>Time In<b class="wysiwyg-color-red"></b></label>
                @Html.TextBoxFor(m => m.TimeIn, new { @class = "form-control", type = "time" })

            </div>

            <div class="form-group form-group-xs col-md-6">
                <label>Time Out<b class="wysiwyg-color-red"></b></label>
                @Html.TextBoxFor(m => m.TimeOut, new { @class = "form-control", type = "time" })

            </div>



        </div>

    </div>


    <div class="row">


        <div class="form-group form-group-xs col-md-12">

            <div class="form-group form-group-xs col-md-6">
                <label>Days<b class="wysiwyg-color-red"></b></label>
                @Html.TextBoxFor(m => m.Days, new { @class = "form-control", type = "text" })

            </div>

            <div class="form-group form-group-xs col-md-6">
                <label>Status<b class="wysiwyg-color-red"></b></label>
                @{

                    var Status = new List<(int Id, string Name)>();

                    Status.Add((Id: 1, Name: "Active"));
                    Status.Add((Id: 2, Name: "In Active"));



                }
                @Html.DropDownList("Active", Status.Select(p => new SelectListItem() { Text = p.Name, Value = p.Id.ToString() }), new { @class = "form-control", data_style = "btn-default btn-xs", tabindex = '4', data_search = "true", data_width = "100%" })

            </div>



        </div>
      
    </div>











