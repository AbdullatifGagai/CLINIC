@model IEnumerable<ZCLINIC.Areas.URM.Models.User>

<div class="page-header page-header-default">
    <div class="breadcrumb-line">
        <h6 class="text-semibold">Users</h6>
    </div>
</div>
@{ 

    string check;
}
<div class="content">
    <div class="panel panel-flat">
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-9 buttons-top">
                    <a class="btn btn-success btn-sm" data-modalhorizontal="true" data-modalsize="modal-md" data-url="/URM/User/AUser" data-heading="New User" data-script="#"><i class="icon-add mr-5"></i> Add</a>
                </div>
                <div class="col-sm-3">
                    <div class="input-group ">
                        <input type="text" class="form-control" id="FilterInput">
                        <span class="input-group-addon bg-danger-800"><i class="icon-search4"></i></span>
                    </div>
                </div>
            </div>

            <table class="table table-xxs table-md datatable-basic table-bordered table-striped table-hover bg-lightgray dataTables_scrollBody">
                <thead>
                    <tr class="bg-danger-800">
                        <th>UserCode</th>
                        <th>Name</th>
                        <th>CNIC</th>
                        <th>UserName</th>
                        <th>Role</th>
                        <th>Actions</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (ZCLINIC.Areas.URM.Models.User s in Model)
                    {
                    <tr data-rowid="@s.UserId">
                        <td>@s.UserCode</td>
                        <td>@s.FirstName</td>
                        <td>@s.CNIC</td>
                        <td>@s.UserName</td>
                        <td>@s.RoleName</td>
                        <td>
                            <ul class="icons-list">
                                <li class="text-primary-600"><a data-modalhorizontal="true" data-modalsize="modal-md" data-heading="Edit User" data-script="#" data-url="/URM/User/AUser?Id=@s.UserId"><i class="icon-pencil7"></i></a></li>
                                <li class="text-danger-600"><a onclick="DeleteAlert({ 'UserId':@s.UserId}, '/URM/User/DeleteUser', 'Users')"><i class="icon-trash"></i></a></li>
                            </ul>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
