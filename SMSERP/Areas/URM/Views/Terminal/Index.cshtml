@model IEnumerable<ZCLINIC.Areas.URM.Models.Terminal>

<div class="page-header page-header-default">
    <div class="breadcrumb-line">
        <h6 class="text-semibold">Terminal</h6>
    </div>
</div>

<div class="content">
    <div class="panel panel-flat">
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-9 buttons-top">
                    <a class="btn btn-success btn-sm" data-modalhorizontal="true" data-modalsize="modal-sm" data-url="/URM/Terminal/ATerminal" data-heading="New Terminal" data-script="#"><i class="icon-add mr-5"></i> Add</a>
                </div>
                <div class="col-sm-3">
                    <div class="input-group ">
                        <input type="text" class="form-control" id="FilterInput">
                        <span class="input-group-addon bg-danger-800"><i class="icon-search4"></i></span>
                    </div>
                </div>
            </div>

            <table class="table table-xxs table-md datatable-basic table-bordered table-striped table-hover bg-lightgray dataTables_scrollBody">
                <thead>
                    <tr class="bg-danger-800">
                        <th>Id</th>
                        <th>Terminal/Branch Name</th>
                        <th>Terminal DNS</th>
                        <th>Status</th>
                        <th>Actions</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (ZCLINIC.Areas.URM.Models.Terminal s in Model)
                    {
                        <tr data-rowid="@s.TerminalId">
                            <td>@s.TerminalCode</td>
                            <td>@s.TerminalName</td>
                            <td>@s.TerminalDNS</td>

                            <td>
                                @if (s.Status == 1)
                                {
                                    <input type="checkbox" class="Status" value="1" checked="checked" data-identifier="TerminalId" data-customurl="/URM/Terminal/ToggleStatusTerminal" />
                                }
                                else
                                {
                                    <input type="checkbox" class="Status" value="2" data-identifier="TerminalId" data-customurl="/URM/Terminal/ToggleStatusTerminal" />
                                }
                            </td>
                            <td>
                                <ul class="icons-list">
                                    <li class="text-primary-600"><a data-modalhorizontal="true" data-heading="Edit Terminal" data-script="#" data-url="/URM/Terminal/ATerminal?Id=@s.TerminalId"><i class="icon-pencil7"></i></a></li>
                                    <li class="text-danger-600"><a onclick="DeleteAlert({ 'Id':@s.TerminalId}, '/URM/Terminal/DeleteTerminal', 'Terminal')"><i class="icon-trash"></i></a></li>
                                </ul>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
