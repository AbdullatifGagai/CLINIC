    $('#btn_add').on('click', function () {

        var ServicesId = $('#ServicesId').val();
        var Rate = $('#Rate').val();
       

        //var Session_ID = $('#Session_ID').val();


        var check = false;






        if (ServicesId == 0 || ServicesId == null) {
            ErrorAlert("Enter Service  Name");
