@using ZCLINIC
@model ZCLINIC.Areas.Transaction.Models.Appointment

@{
    string URL = Model == null ? "/Transaction/Appointment/SaveAppointment" : "/Transaction/Appointment/UpdateAppointment";
    int counter = 0;
}

<style>
    /*Remove Arrows/Spinners from type number*/
    /* Chrome, Safari, Edge, Opera */
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    /* Firefox */
    input[type=number] {
        -moz-appearance: textfield;
    }
</style>

<form method="post" data-url="@URL" data-rurl="/Transaction/Appointment" data-display="Appointment">



    @Html.HiddenFor(m => m.AppomentId)
    <div class="row">



        <div class="form-group form-group-xs col-md-12">

            <div class="form-group form-group-xs col-md-2">
                <label>Appoment Id<b class="wysiwyg-color-red"></b></label>
                @Html.TextBoxFor(m => m.AppomentCode, new { @class = "form-control", type = "text", @readonly = "readonly" })

            </div>

            <div class="form-group form-group-xs col-md-3">
                <label>Appoment Date<b class="wysiwyg-color-red"></b></label>
                @Html.TextBoxFor(m => m.AppomentDate, new { @class = "form-control", type = "date" })

            </div>


            <div class="form-group form-group-xs col-md-5">
                <label>Doctor Name<b class="wysiwyg-color-red"></b></label>
                @{
                    List<ZCLINIC.Areas.Master.Models.Doctor> Doctor = new ZCLINIC.Areas.Master.Models.Doctor().Master_DoctorGetAll(Context.Session.GetBValues(), Context.GetIP(), Context.GetCInfo());

                }
                @Html.DropDownList("DocId", Doctor.Select(s => new SelectListItem() { Text = s.DoctorName, Value = s.DocId.ToString() }), new { @class = "form-control " })

            </div>












            <div class="form-group form-group-xs mt-20 col-lg-2">
                <a class="btn btn-info btn-sm" data-modalhorizontal="true" data-modalsize="modal-lg" data-smodal="true" data-url="/Master/PatientReg/APatientReg" data-heading="Patient Registration" data-script="#"><i class="icon-add mr-5"></i>Patient Registration</a>
            </div>




        </div>
    </div>






    <div class="row">



        <div class="form-group form-group-xs col-md-12">


            <div class="form-group form-group-xs col-md-2">
                <label>Mr Id<b class="wysiwyg-color-red"></b></label>
                @Html.TextBoxFor(m => m.MrId, new { @class = "form-control", type = "text", required = "required", @readonly = "readonly" })

            </div>



            <div class="form-group form-group-xs col-md-2">
                <label>Mr No<b class="wysiwyg-color-red"></b></label>
                @Html.TextBoxFor(m => m.MrNo, new { @class = "form-control", type = "text", required = "required", @readonly = "readonly" })

            </div>
            <div class="form-group form-group-xs col-md-6">
                <label>Patient Name<b class="wysiwyg-color-red"></b></label>
                @Html.TextBoxFor(m => m.PatientName, new { @class = "form-control", required = "required", type = "text" })

            </div>





            <div class="form-group form-group-xs col-md-2">
                <label>Amount<b class="wysiwyg-color-red"></b></label>
                @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", type = "text", required = "required", @readonly = "readonly" })

            </div>

            <div class="form-group form-group-xs col-md-2">
                <label>Receipt No<b class="wysiwyg-color-red"></b></label>
                @Html.TextBoxFor(m => m.ReceiptId, new { @class = "form-control", type = "text" })

            </div>











        </div>
    </div>























