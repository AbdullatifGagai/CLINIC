@using ZCLINIC
@model ZCLINIC.Areas.Transaction.Models.DoctorLedgerMaster

@{
    string URL = Model == null ? "/Transaction/DoctorLedgerMaster/SaveDoctorLedgerMaster" : "/Transaction/DoctorLedgerMaster/UpdateDoctorLedgerMaster";
    int counter = 0;

    List<ZCLINIC.Areas.Master.Models.Doctor> DoctorName = new ZCLINIC.Areas.Master.Models.Doctor().Master_DoctorGetAll(Context.Session.GetBValues(), Context.GetIP(), Context.GetCInfo());
    List<ZCLINIC.Areas.Master.Models.ClinicCategory> ClinicCategory = new ZCLINIC.Areas.Master.Models.ClinicCategory().Master_ClinicCategoryGetAll(Context.Session.GetBValues(), Context.GetIP(), Context.GetCInfo());



}

<style>
    /*Remove Arrows/Spinners from type number*/
    /* Chrome, Safari, Edge, Opera */
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    /* Firefox */
    input[type=number] {
        -moz-appearance: textfield;
    }
</style>

<form method="post" data-url="@URL" data-rurl="/Master/Doctor" data-display="FeeVoucher">



    @Html.HiddenFor(m => m.Id)
    <div class="row">



        <div class="form-group form-group-xs col-md-12">

            <div class="form-group form-group-xs col-md-2">
                <label>Doctor Id<b class="wysiwyg-color-red"></b></label>
                @Html.TextBoxFor(m => m.Code, new { @class = "form-control", type = "text", @readonly = "readonly" })

            </div>


            <div class="form-group form-group-xs col-md-2">
                <label>Date<b class="wysiwyg-color-red"></b></label>
                @Html.TextBoxFor(m => m.Wdate, new { @class = "form-control", type = "Date" })

            </div>


             <div class="form-group form-group-xs col-md-2">
                 <label>RefId<b class="wysiwyg-color-red"></b></label>
                @Html.TextBoxFor(m => m.Wdate, new { @class = "form-control", type = "textt" })

            </div>


     





        </div>
    </div>


    <div class="clearfix"></div>




    <div class="table-responsive container-fluid quotaiontable">
        <table class="table table-xxs table-md table-bordered table-striped table-hover bg-lightgray dataTables_scrollBody">




            <thead>
                <tr class="bg-blue-800">

                    <th class="col-lg-2">Doctor Name</th>
                    <th class="col-lg-1">DocShare</th>
                    <th class="col-lg-1">Amount</th>
                    <th class="col-lg-1">ShareAmt</th>
                  <th class="col-lg-1">Count OPD</th>


                    <th class="col-lg-2">OPD Type</th>


                    

                    <th class="col-lg-1">Actions</th>



                </tr>

                <tr>






                    <th class="col-md-3">
                        @Html.DropDownList("ConId", DoctorName.Select(p => new SelectListItem() { Text = p.DoctorName.ToString(), Value = p.DocId.ToString() }), new { @class = "bootstrap-select vatratecal", data_live_search = "true", data_width = "100%" })

                    </th>
                    <th class="col-md-1"><input type="text" class="form-control  DocShare TxtBox" , id="DocShare" /></th>
                    <th class="col-md-1"><input type="text" class="form-control  Amount TxtBox" , id="Amount" /></th>
                    <th class="col-md-1"><input type="text" class="form-control  ShareAmt TxtBox" id="ShareAmt" /></th>

                    <th class="col-md-1"><input type="text" class="form-control CountOPD TxtBox" id="CountOPD" /></th>

                    <th class="col-md-3">
                        @Html.DropDownList("TypeID", ClinicCategory.Select(p => new SelectListItem() { Text = p.CategoryName.ToString(), Value = p.CategoryId.ToString() }), new { @class = "bootstrap-select vatratecal", data_live_search = "true", data_width = "100%" })

                    </th>
                    





                    <th class="col-lg-1"><a class="icon-add text-primary" id="AddItemBtn"></a></th>
                </tr>



            </thead>


            <tbody class="VoucherDetail">
               

            </tbody>










            <tfoot>
                <tr>

                    @*<td colspan="2"></td>
                        <td class="text-right">Total Amount</td>
                        <td>@Html.TextBoxFor(m => m.AdAmt, new { @class = "form-control", type = "number", @readonly = "readonly" })</td>



                        <td>@Html.TextBoxFor(m => m.AnnAmt, new { @class = "form-control", type = "number", @readonly = "readonly" })</td>
                        <td>@Html.TextBoxFor(m => m.MontlyAmt, new { @class = "form-control", type = "number", @readonly = "readonly" })</td>
                        <td>@Html.TextBoxFor(m => m.MDisAmt, new { @class = "form-control", type = "number", @readonly = "readonly" })</td>

                        <td>@Html.TextBoxFor(m => m.TAmount, new { @class = "form-control", type = "number", @readonly = "readonly" })</td>*@



                </tr>

            </tfoot>
















        </table>




    </div>




















    <div class="modal-footer mt-10 no-padding no-border">




        <a data-url="/Master/Doctor" data-script="#" class="btn btn-danger btn-xs  closeBtn" data-dismiss="modal"><i class="icon-cross"></i>Close</a>




        <button type="button" data-submit="" class="btn btn-primary  btn-xs  SaveBtn"><i class="icon-floppy-disk position-left"></i>Save</button>
        @* <button type="button" data-submit="" class="btn btn-primary btn-xs SaveBtn"><i class="icon-floppy-disk position-left"></i>Save</button>*@

    </div>

</form>
