@using ZCLINIC;



@model IEnumerable<ZCLINIC.Areas.Transaction.Models.ReportMaster>

@{
    bool addview = ZCLINIC.UserRights.URM_AddNew_IsAuthenticated(Context.Session.GetRoleId(), "111");
    bool editview = ZCLINIC.UserRights.URM_Update_IsAuthenticated(Context.Session.GetRoleId(), "111");
    bool delete = ZCLINIC.UserRights.URM_Delete_IsAuthenticated(Context.Session.GetRoleId(), "111");
    bool Print = ZCLINIC.UserRights.URM_Print_IsAuthenticated(Context.Session.GetRoleId(), "111");

}


@{
    string a = string.Empty;
}



<div class="page-header page-header-default">
    <div class="breadcrumb-line">
        <h6 class="text-semibold">Technologist</h6>
    </div>
</div>


<div class="content">
    <div class="panel panel-flat">
        <div class="panel-body">
            <div class="row">
                <div class="col-md-3 buttons-top">

              
                </div>

                <div class="col-sm-6">
                    <div class="form-group">
                        @*<select class="bootstrap-select data-type" data-style="btn-primary" data-width="20%">
                                <option value="0">All</option>
                                <option value="1">Active</option>
                                <option value="2">Inactive </option>
                            </select>*@

                        @*<select url="/Master/MasterReports/City" class="bootstrap-select" id="downloadBtn" data-style="btn-primary" data-width="30%">
                                <option value="0">[SELECT Type]</option>
                                <option value="1">PDF</option>
                                <option value="2">EXCEL</option>
                            </select>*@
                    </div>

                </div>

                <div class="col-sm-3">
                    <div class="input-group ">
                        <input type="text" class="form-control" id="FilterInput">
                        <span class="input-group-addon bg-blue-800"><i class="icon-search4"></i></span>
                    </div>
                </div>
            </div>

            <table class="table table-xxs table-md datatable-basic table-bordered table-striped table-hover bg-lightgray dataTables_scrollBody">

                <thead>
                    <tr class="bg-blue-800">
                        <th>Report</th>

                        <th>Report Date</th>

                        <th>Mrno</th>
                        <th>Patient  Name</th>

                        <th>Receipt No</th>
                        <th hidden>FID</th>
                      




                        @*  <th>Status</th>*@
                        <th>Actions</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (ZCLINIC.Areas.Transaction.Models.ReportMaster s in Model)
                    {
                        <tr data-rowid="@s.ReportId">

                            <td>@s.ReportNo </td>
                            <td>@s.ReportDate </td>


                            <td>@s.Mrno </td>
                            <td>@s.PName </td>
                            <td>@s.ReceiptNo </td>
                            <td hidden>@s.FID</td>

                          



                            <td>
                                <ul class="icons-list">

                                    @if (editview)
                                    {
                                        <li class="text-primary-600"><a data-modalhorizontal="true" data-modalsize="modal-full" data-heading="Edit Report" data-script="/assets/Areas/Transaction/ReportMaster/ReportMaster.js" data-url="/Transaction/ReportMaster/AReportMaster?Id=@s.ReportId"><i class="icon-pencil7"></i></a></li>
                                        <li class="text-green-600"><a onclick="ApprovedAlert({ 'Id':@s.ReportId}, '/Transaction/ReportMaster/ApprovedTech', 'Technologist Approval')"><i class="icon-checkmark"></i></a></li>



                                    }




                                    @if (Print)
                                    {




                                        <li class="text-primary-600"><a data-toggle="tooltip" title="Report" href="/Report/Reportrdlc/AReport?rvalues.Name=@s.FID&rvalues.Value[0]=1&rvalues.Value[1]=@s.ReportId&rvalues.Value[2]=@a&rvalues.Value[3]=@a&rvalues.Value[4]=@a&rvalues.Value[5]=@a&rvalues.Value[6]=@a" data-heading="CPD Form" target="_blank"><i class="icon-printer"></i></a></li>


                                    }


















                                </ul>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


