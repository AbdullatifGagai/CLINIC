@using ZCLINIC
@model ZCLINIC.Areas.URM.Models.Terminal

@{
    string URL = Model == null ? "/URM/Terminal/SaveTerminal" : "/URM/Terminal/UpdateTerminal";
}

<form class="form-horizontal" method="post" id="" data-url="@URL" data-display="Product" data-rurl="/URM/Terminal">

    @Html.HiddenFor(m => m.TerminalId)

    <div class="row">

        <div class="form-group form-group-xs col-sm-12">
            <label class="control-label col-sm-4">Terminal Description<b class="wysiwyg-color-red">*</b></label>
            <div class="form-group has-feedback col-sm-8">
                @Html.TextBoxFor(m => m.TerminalName, new { @class = "form-control input-group", placeholder = "Enter Terminal Description", type = "text", required = "required" })
                <div class="form-control-feedback"><i class=""></i></div>
            </div>
        </div>

        <div class="form-group form-group-xs col-sm-12">
            <label class="control-label col-sm-4">DNS Name<b class="wysiwyg-color-red">*</b></label>
            <div class="form-group has-feedback col-sm-8">
                @Html.TextBoxFor(m => m.TerminalDNS, new { @class = "form-control input-group", placeholder = "Enter Terminal DNS", type = "text", required = "required" })
                <div class="form-control-feedback"><i class=""></i></div>
            </div>
        </div>

        <div class="modal-footer no-padding no-border">
            <button type="button" class="btn btn-danger btn-xs" data-dismiss="modal"><i class="icon-cross"></i>Close</button>
            <button type="button" data-submit="true" class="btn btn-primary btn-xs"><i class="icon-floppy-disk position-left"></i>Save</button>
        </div>

    </div>

</form>
